---
interface Props {
  title: string;
  link: string;
  substring: string;
  description: string;
  image?: any; // can be a file/image or direct image
}

const { title, link, substring, description, image } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="block group focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-400 rounded-2xl">
  <div
    class="relative w-full rounded-2xl bg-white/5 p-7 shadow-surface-elevation-low transition duration-300 hover:bg-linear-to-tr hover:from-blue-500/20 hover:to-rose-500/10 hover:shadow-surface-elevation-medium fade-in-card"
    style="animation: fadeInUp 0.7s cubic-bezier(.39,.575,.565,1) both;"
  >
    <div class="flex w-full items-center">
      {image && (
        <div class="overflow-hidden rounded-xl mr-5 transition-transform duration-300 group-hover:scale-105 group-hover:shadow-lg">
          <img src={image} alt={`Screenshot or logo for project ${title}`} class="w-14 h-14 object-cover" />
        </div>
      )}
      <div class="grow">
        <h3
          class="text-xl font-medium text-gray-200/80 group-hover:underline underline-offset-4"
        >
          {title}
        </h3>
        <p class="text-lg text-gray-100/50">{substring}</p>
      </div>
    </div>
    <p class="mt-5 text-xl text-gray-100/80">{description}</p>
  </div>
</a>

<style>
@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(30px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
.fade-in-card {
  opacity: 0;
  animation: fadeInUp 0.7s cubic-bezier(.39,.575,.565,1) both;
  animation-delay: 0.1s;
}
</style>