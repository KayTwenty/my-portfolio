---
interface Props {
  title: string;
  link: string;
  substring: string;
  description: string;
  image?: any; // can be a file/image or direct image
}

const { title, link, substring, description, image } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="block group focus:outline-none focus-visible:ring-2 focus-visible:ring-blue-400 rounded-2xl h-full">
  <div
    class="relative w-full h-full rounded-2xl bg-white/5 p-4 sm:p-6 shadow-surface-elevation-low transition duration-300 hover:bg-linear-to-tr hover:from-blue-500/20 hover:to-rose-500/10 hover:shadow-surface-elevation-medium fade-in-card flex flex-col aspect-square justify-center items-center"
    style="animation: fadeInUp 0.7s cubic-bezier(.39,.575,.565,1) both;"
  >
    {image && (
      <div class="rounded-xl mb-3 sm:mb-4 transition-transform duration-300 group-hover:scale-110">
        <img src={image} alt={`Screenshot or logo for project ${title}`} class="w-16 h-16 sm:w-20 sm:h-20 object-contain" />
      </div>
    )}
    <h3
      class="text-lg sm:text-xl font-semibold text-gray-200/90 group-hover:underline underline-offset-4 mb-2 sm:mb-3 text-center"
    >
      {title}
    </h3>
    <p class="text-xs sm:text-sm text-gray-100/60 text-center">{substring}</p>
  </div>
</a>

<style>
@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(30px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
.fade-in-card {
  opacity: 0;
  animation: fadeInUp 0.7s cubic-bezier(.39,.575,.565,1) both;
  animation-delay: 0.1s;
}
</style>