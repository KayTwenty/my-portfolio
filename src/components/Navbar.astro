---
import { Transition } from "./Transition";
import ProfileImage from "./profileImage.astro";
import Socials from "./Socials.astro";

interface Props {
  showNav?: boolean;
  navRefId: string;
}

const { showNav, navRefId } = Astro.props;
---

<div class="pointer-events-none fixed top-6 z-30 w-full grid grid-cols-[1fr,min(640px,100%),1fr] px-4">
  <Transition show={showNav} refId={navRefId} client:only>
    <nav class="pointer-events-auto col-start-2 w-full rounded-2xl bg-white/10 backdrop-blur-md border border-blue-400/20 shadow-surface-glass px-6 py-3 flex items-center justify-between">
      <div class="flex items-center space-x-6">
        <ProfileImage size="small" />
      </div>
      <Socials />
    </nav>
  </Transition>
</div>